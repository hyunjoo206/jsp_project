<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- mapper 오류나면 db다 끊김 그러니까 이거 필수! DAO에서 NS랑 맞춰서 BoardMapper로 -->
  <mapper namespace="BoardMapper">
  
  
  	<!-- BoardMapper가 db(cmd창)이랑 같은 거다..... -->
  	<insert id="reg" parameterType="bvo">
  		insert into board(title, writer, content, image_file)
  		values(#{title},#{writer},#{content},#{image_file})
  	</insert>
  	 
  	 <!-- list아니라 bvo 타입으로 보내는거임! -->
  	<select id="list" resultType="bvo"> 
  		select * from board order by bno desc
  	</select>
  	
  	<select id="sel" parameterType="int" resultType="bvo">
  		select * from board where bno= #{bno}
  	</select>
  	
  	<update id="up" parameterType="bvo" >
  		update board set 
  		title=#{title}, content=#{content}, reg_date=now() where bno=#{bno}
  	</update>
  	
  	<delete id="del" parameterType="int">
  		<!-- delete는 * 없음! 주의! -->
  		delete from board where bno=#{bno}
  	</delete>
  	
  	<update id="read" parameterType="int">
  		update board set
  		readcount=readcount+1 
  		where bno= #{bno}
  	</update>
  	
  	<select id="cnt" resultType="int" parameterType="pgvo">
  		select count(bno) from board where bno>0
  		<include refid="search"></include>
  	</select>
  	
  	<select id="pageList" parameterType="pgvo" resultType="bvo">
  		select * from board order by bno desc limit #{pageStart}, #{qty}
  	</select>
  	
  	<!-- 검색 -->
  	<sql id="search" >
  		<if test="type!=null">
  			<trim prefix="and (" suffix=")" prefixOverrides="OR">
  				<foreach collection="typeToArray" item="type">
  					<trim prefix="OR"> 
  						<choose>
  							<when test="type == 't'.toString()">
  								title like concat('%', #{keyword}, '%')
  							</when>
  							<when test="type == 'w'.toString()">
  								writer like concat('%', #{keyword}, '%')
  							</when>
  							<when test="type == 'c'.toString()">
  								content like concat('%', #{keyword}, '%')
  							</when>
  						</choose>
  					</trim>
  				</foreach>
  			</trim>
  		</if>
  	</sql>
  	
  	<select id="selectList" parameterType="pgvo" resultType="bvo">
  			<!--content 필요하면 써주면 됨! (*)로 하면 다 나옴 // read_count 아닌 거 주의!! -->
  		select a.bno, title, writer, reg_date, content, readcount from ( 
  			select bno from board where bno > 0
  			<include refid="search"></include>
  			order by bno desc
  			limit #{pageStart}, #{qty}
  		)a left join board b
  		on a.bno = b.bno
  	</select>
  
  </mapper>